/* General Styles */
QWidget {
    color: PRIMARY_TEXT;
    font: 10pt "Segoe UI";
    background-color: PRIMARY_BACKGROUND;
}

/* Tooltips */
QToolTip {
	color: #ffffff;
	background-color: TOOLTIP_BACKGROUND;
	border: 1px solid DEFAULT_BORDER;
	background-image: none;
	background-position: left center;
    background-repeat: no-repeat;
	border: none;
	border-left: 2px solid HIGHLIGHT_BORDER;
	text-align: left;
	padding-left: 8px;
	margin: 0px;
}

/* QPushButton */
QPushButton {
    background-color: BUTTON_BACKGROUND;
    border: 2px solid BUTTON_BACKGROUND;
    border-radius: 5px;
}
QPushButton:hover {
    background-color: BUTTON_HOVER_BACKGROUND;
    border: 2px solid BUTTON_HOVER_BORDER;
}
QPushButton:pressed {
    background-color: BUTTON_PRESSED_BACKGROUND;
    border: 2px solid BUTTON_PRESSED_BORDER;
}

/* QLineEdit */
QLineEdit {
    background-color: SECONDARY_BACKGROUND;
    border: 2px solid SECONDARY_BACKGROUND;
    border-radius: 5px;
    selection-color: HIGHLIGHT_TEXT;
    selection-background-color: SELECTION_TEXT;
}
QLineEdit:hover {
    border: 2px solid HOVER_BORDER;
}
QLineEdit:focus {
    border: 2px solid FOCUS_BORDER;
}
